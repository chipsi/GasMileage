<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.alteridem.mileage" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <application
        android:name=".MileageApplication_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Gasmileage" >
        <activity
            android:name=".VehicleActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MileagePreferencesActivity_"
            android:label="@string/prefs_title"
            android:parentActivityName=".VehicleActivity_" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VehicleActivity_" /> >
        </activity>
        <activity
            android:name=".HelpActivity_"
            android:label="@string/help_title"
            android:parentActivityName=".VehicleActivity_" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VehicleActivity_" /> >
        </activity>
    </application>

</manifest>
