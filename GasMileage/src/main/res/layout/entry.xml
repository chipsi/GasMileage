<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <AbsoluteLayout android:layout_height="fill_parent"
           android:layout_width="10dp"
           android:layout_marginRight="5dp"
           android:id="@+id/entry_color" />

    <TextView
            android:layout_height="fill_parent"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical"
            android:text="4.5 L/100km"
            android:id="@+id/entry_mileage"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry_note_icon"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/note_icon"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="6dp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp">

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="65.2 L"
                android:id="@+id/entry_liters"/>

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="452 km"
                android:id="@+id/entry_kilometers"/>

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="23/12/11"
                android:id="@+id/entry_date"/>

    </LinearLayout>
</LinearLayout>